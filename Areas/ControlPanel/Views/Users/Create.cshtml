@model ApplicationUser

@{
    ViewData["Title"] = "المستخدمين";
}
<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item"><a asp-action="index" asp-controller="Home" asp-area=""><i class="fa fa-home mr-1"></i>الرئيسية</a></li>
    <li class="breadcrumb-item"><a asp-action="Index"> @ViewData["Title"]</a></li>
    <li class="breadcrumb-item active">جديد</li>
</ol>
<div class="content-wrapper">
    <div class="row">
        <div class="col-12">
            <div class="card card-default">
                <h4 class="card-header"><i class="fa fa-plus"></i> @ViewData["Title"]</h4>
                <div class="card-body">
                    <p class="sub-header">إضافة جديد</p>
                    <hr />
                    <form asp-action="Create">
                       
                        <div class="form-group form-row">
                            <label asp-for="PersonName" class="col-lg-2  col-md-2 col-form-label"></label>
                            <div class="col-lg-4 col-md-4">
                                <input type="text" asp-for="PersonName" class="form-control" autocomplete="off" />
                                <span asp-validation-for="PersonName" class="text-danger"></span>
                            </div>

                            <label asp-for="UserName" class="col-lg-2  col-md-2 col-form-label"></label>
                            <div class="col-lg-4 col-md-4">
                                <input type="text" asp-for="UserName" class="form-control" autocomplete="off" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group form-row">
                            <label asp-for="Password" class="col-lg-2  col-md-2 col-form-label"></label>
                            <div class="col-lg-4 col-md-4">
                                <input type="password" asp-for="Password" class="form-control" autocomplete="off" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <label class="col-lg-2  col-md-2 col-form-label"></label>
                            <div class="col-lg-4 col-md-4">
                                <div class="custom-control custom-checkbox custom-control-inline">
                                    <div class="custom-control custom-checkbox custom-control-inline">
                                        <input asp-for="IsEnabled" type="checkbox" class="custom-control-input">
                                        <input asp-for="IsEnabled" type="hidden" value="false" class="custom-control-input">
                                        <label class="custom-control-label" for="IsEnabled">
                                            الفعالية
                                        </label>
                                    </div>

                                    <input type="hidden" asp-for="IsEnabled" class="form-control" autocomplete="off" />

                                    <span asp-validation-for="IsEnabled" class="text-danger"></span>
                                </div>

                            </div>
                        </div>
                        <div class="form-group form-row">

                            <label class="col-lg-2  col-md-2 col-form-label">الصلاحيات</label>
                            <div class="col-lg-10 col-md-10 mt-2">

                                @foreach (var item in Model.AllRoles)
                                {
                                    <div id="div-@(item.Id)" class="custom-control custom-checkbox custom-control-inline">
                                        <input id="ch-@(item.Id)" name="RolesIds" type="checkbox" class="custom-control-input" value="@item.Name">
                                        <label class="custom-control-label" for="ch-@(item.Id)">
                                            @item.Name
                                        </label>
                                    </div>
                                }
                            </div>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">إضافة</button>
                            <a asp-action="Index" class="btn btn-default">الرئيسية</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    $("#div-2").remove();
</script>
}


