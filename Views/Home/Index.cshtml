<!--event start here-->
<div class="events">
    <div class="container">
        <div class="events-main">
            <div class="events-top">
                <h3>Events</h3>
            </div>
            @foreach (var item in Model.Events)
            {
                <div class="events-grid">
                    <div class="col-md-3 event-month wthree">
                        <h3>@item.Date.Day</h3>
                        <h4>@item.Date.Month</h4>
                    </div>
                    <div class="col-md-5 event-text">
                        <h4>@item.Title</h4>
                        <p>
                            @item.Description
                        </p>
                        <a asp-action="Single" asp-route-id="@item.Id">Read More</a>
                        <p> </p>
                    </div>
                    <div class="col-md-4 event-img">
                        <div class="item item-type-move">
                            <a class="item-hover" href="single.html">
                                <div class="item-info">
                                    <div class="headline">
                                        @item.ImageCaption
                                        <div class="line"> </div>
                                    </div>
                                    <div class="date">Lorem ipsum dolor</div>
                                </div>
                                <div class="mask"> </div>
                            </a>
                            <div class="item-img">
                                <img src="/Uploads/@item.ImageUrl" class="img-responsive" alt="">
                            </div>
                        </div>

                    </div>
                    <div class="clearfix"> </div>
                </div>
            }
        </div>
    </div>
</div>
